# Supabase (client)
VITE_SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-publishable-key

# Base URL for client-side absolute links
VITE_PUBLIC_BASE_URL=http://localhost:3000

# Ads Configuration
VITE_ADS_ENABLED=true

# Supabase (server)
# Used by API routes for privileged operations
SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-publishable-key # optional; used for debug API to simulate RLS

# Base URL for server-side link generation
PUBLIC_BASE_URL=http://localhost:3000

# Amazon Affiliate Configuration
VITE_AMAZON_PARTNER_TAG=yourtag-21

# Server-side Amazon PA-API Configuration (for production)
AMAZON_API_ENABLED=false
AMZ_ACCESS_KEY=your-access-key-id
AMZ_SECRET_KEY=your-secret-access-key
AMZ_ASSOC_TAG=yourtag-21
AMZ_REGION=eu-west-1

# Draw configuration - set to "true" to bypass auth validation for testing
ALLOW_UNAUTHENTICATED_DRAW=false
